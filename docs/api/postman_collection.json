{
  "info": {
    "name": "Balkan File Management API",
    "description": "Complete API collection for testing the Balkan File Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "balkan-api"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@test.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            },
            "description": "Register a new user account. The first user registered becomes an admin."
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.token);",
                  "    pm.collectionVariables.set('user_id', response.user.id);",
                  "    console.log('JWT Token saved:', response.token.substring(0, 20) + '...');",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@test.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            },
            "description": "Authenticate user and receive JWT token"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.token);",
                  "    pm.collectionVariables.set('user_id', response.user.id);",
                  "    console.log('Login successful, JWT token updated');",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Files",
      "item": [
        {
          "name": "Check Duplicate (SHA-256)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sha256_hash\": \"a665a45920422f9d417e4867efdc4fb8a04a1f3fff1fa07e998e86f7f7a27ae3\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/files/check-duplicate",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "files",
                "check-duplicate"
              ]
            },
            "description": "Check if a file with the given SHA-256 hash already exists. Use this before uploading to prevent duplicates."
          }
        },
        {
          "name": "Upload File",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "name",
                  "value": "sample-document.pdf",
                  "description": "Optional custom filename"
                },
                {
                  "key": "is_public",
                  "value": "false",
                  "description": "Whether file should be publicly accessible"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/files/upload",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "files",
                "upload"
              ]
            },
            "description": "Upload a file with automatic deduplication. Select a file to upload."
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('file_id', response.id);",
                  "    console.log('File uploaded successfully, ID:', response.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "List Files",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/files?page=1&page_size=10&search=",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "files"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "page_size",
                  "value": "10"
                },
                {
                  "key": "search",
                  "value": "",
                  "description": "Search in filename"
                }
              ]
            },
            "description": "List user's files with pagination and optional filtering"
          }
        },
        {
          "name": "Get File Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/files/{{file_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "files",
                "{{file_id}}"
              ]
            },
            "description": "Get detailed information about a specific file"
          }
        },
        {
          "name": "Download File",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/files/{{file_id}}/download",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "files",
                "{{file_id}}",
                "download"
              ]
            },
            "description": "Download the actual file content"
          }
        },
        {
          "name": "Share File",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"is_public\": true,\n  \"expires_at\": \"2024-12-31T23:59:59Z\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/files/{{file_id}}/share",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "files",
                "{{file_id}}",
                "share"
              ]
            },
            "description": "Create a share link for the file"
          }
        },
        {
          "name": "Delete File",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/files/{{file_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "files",
                "{{file_id}}"
              ]
            },
            "description": "Delete a file (only file owner can delete)"
          }
        }
      ]
    },
    {
      "name": "Admin (Admin Role Required)",
      "item": [
        {
          "name": "Get System Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/stats",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
                "stats"
              ]
            },
            "description": "Get comprehensive system statistics (Admin only)"
          }
        },
        {
          "name": "List All Files (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/files?page=1&page_size=10",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
                "files"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "page_size",
                  "value": "10"
                }
              ]
            },
            "description": "List all files across all users (Admin only)"
          }
        },
        {
          "name": "List All Users (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/users?page=1&page_size=10",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
                "users"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "page_size",
                  "value": "10"
                }
              ]
            },
            "description": "List all users in the system (Admin only)"
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set default base URL if not set",
          "if (!pm.environment.get('base_url')) {",
          "    pm.environment.set('base_url', 'http://localhost:8080/api/v1');",
          "}",
          "",
          "// Log current configuration",
          "console.log('Base URL:', pm.environment.get('base_url'));",
          "console.log('JWT Token:', pm.collectionVariables.get('jwt_token') ? 'Set' : 'Not set');",
          "console.log('User ID:', pm.collectionVariables.get('user_id') || 'Not set');",
          "console.log('File ID:', pm.collectionVariables.get('file_id') || 'Not set');"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api/v1",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "file_id",
      "value": "",
      "type": "string"
    }
  ]
}
